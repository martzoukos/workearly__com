{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "CONTENTFUL_GRAPHQL_URL",
    "CONTENTFUL_PREVIEW_GRAPHQL_URL",
    "AIRTABLE_API_KEY",
    "CONTENTFUL_PREVIEW_SECRET_TOKEN",
    "NODE_ENV",
    "HUBSPOT_API_KEY",
    "STRIPE_SECRET_KEY",
    "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
    "CONTENTFUL_SPACE_ID",
    "CONTENTFUL_MANAGEMENT_TOKEN",
    "SITE_URL"
  ],
  "globalDependencies": ["**/.env.*local", ".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
